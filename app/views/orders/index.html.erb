<h1>订单明细</h1>

<table>
  <thead>
  <tr>
    <th>用户ID</th>
    <th>派送员ID</th>
    <th>状态</th>
    <th>运费</th>
    <th>操作</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
      <tr>
        <td><%= order.user_id %></td>
        <td><%= order.send_id %></td>
        <td><%= order.status %></td>
        <td><%= order.freight %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
  <% end %>
  </tbody>
</table>
<br>

<%= link_to '添加订单', new_order_path %>