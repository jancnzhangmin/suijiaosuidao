<script type="text/javascript" language="javascript">
    function readURL(input,imgid) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('.'+imgid)
                        .attr('src', e.target.result)
                //.width(300)
                //.height(200);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }


</script>





<%= form_for :advertisement , url: advertisements_path do |f| %>

    <h2>添加广告</h2>
    <div class="field">
      <%= f.label :标题 %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :图片 %><br>
      <%= f.file_field :adimage ,:onchange => "readURL(this,'img1')" %>
      <%if !@advertisement.adimage %>
          <img style="margin-left: 110px" class="img1" width="200px" height="150px"  src=<%= @advertisement.adimage.url%> />
      <%else%>
          <img style="margin-left: 110px" class="img1" width="200px" height="150px"  src=<%=image_path('noimage.png')%> />
      <%end%>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>


<%end%>
