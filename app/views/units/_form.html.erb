<%= form_for(@unit) do |f|   %>
    <table class="col-lg-8">
      <tr>
        <div class="form-group">
          <td style="margin-top: 10px;width:30px;text-align: right;padding: 10px;"><%= f.label :名称 %></td>

              <td><%= f.text_field :name, class:"form-control" %></td>

        </div>
