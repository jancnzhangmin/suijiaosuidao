
<%= render 'head'%>
<div class="container fluid-height clearfix">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="heading"><i class="icon-bullhorn"></i>&nbsp; 商家信息</h2>
      <div class="widget-container fluid-height clearfix" style="padding: 10px;">
        <div class="col-lg-7">
          <p>
            <span class="col-sm-2" style="text-align: right;">商家登录名:</span>
            <%= @seller.login %>
          </p>
          <p>
            <span class="col-sm-2" style="text-align: right;">商家密码:</span>
            ******
          </p>
          <p>
            <span class="col-sm-2" style="text-align: right;">商家名称:</span>
            <%= @seller.name %>
          </p>
          <p>
            <span class="col-sm-2" style="text-align: right;">商家地址:</span>
            <%= @seller.address %>
          </p>
          <p>
            <span class="col-sm-2" style="text-align: right;">商家位置:</span>
            <%= @seller.location %>
          </p>
          <p>
            <span class="col-sm-2" style="text-align: right;">商家概要:</span>
            <%= @seller.summary %>
          </p>
          <p>

          <%= link_to '编辑', edit_seller_path(@seller) ,class:"btn btn-primary-outline pull-right",'data-no-turbolink'=>true%>
          <%= link_to '返回', sellers_path,class:"btn btn-primary-outline pull-right" %>
        </div>
        <div class="col-lg-5">
          <span class="col-sm-2" style="text-align: right;">logo:</span>
          <%=image_tag @seller.logo.url %>
        </div>
      </div>
    </div>
  </div>
</div>

