    <table class="col-lg-8">
      <tr>
        <div class="form-group">
          <td style="margin-top: 10px;width:100px;text-align: right;padding: 10px;"><%= f.label :类型名称 %></td>
          <td><%= f.text_field :claname, class:"form-control" %></td>
