<h1>产品列表</h1>

<table>
  <thead>
  <tr>
    <th>商家ID</th>
    <th>单位ID</th>
    <th>产品名称</th>
    <th>产品价格</th>
    <th>产品图片</th>
    <th>状态</th>
    <th>数量</th>
    <th>操作</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
      <tr>
        <td><%= product.seller_id %></td>
        <td><%= product.unit_id %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.avatar %></td>
        <td><%= product.status %></td>
        <td><%= product.num %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br>

<%= link_to '添加产品', new_product_path %>
